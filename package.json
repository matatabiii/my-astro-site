{
  "name": "@example/basics",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development concurrently \"yarn astro dev\" \"yarn dev:svgSprite\"",
    "start": "NODE_ENV=development astro dev",
    "build": "NODE_ENV=production astro build",
    "build:dev": "NODE_ENV=development astro build",
    "preview": "astro preview",
    "astro": "astro",
    "dev:svgSprite": "chokidar './public/assets/svg/icons/*.svg' -c 'yarn svg-sprite' --initial",
    "svg-sprite": "svg-sprite --config svg-sprite.config.json ./public/assets/svg/icons/*.svg",
    "lint:eslint": "eslint 'src/**/*.{js,ts,astro}'",
    "lint:prettier": "prettier . --check",
    "fix:eslint": "yarn lint:eslint --fix",
    "fix:prettier": "yarn lint:prettier --write"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "@splidejs/splide-extension-intersection": "^0.2.0",
    "astro-relative-links": "^0.2.5",
    "sass-easing": "^1.0.3",
    "simple-scroll-trigger": "^3.0.1",
    "tween24": "^1.5.0"
  },
  "devDependencies": {
    "@markuplint/astro-parser": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "astro": "^2.1.2",
    "autoprefixer": "^10.4.13",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-astro": "^0.23.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "markuplint": "^3.3.1",
    "postcss": "^8.4.21",
    "postcss-custom-media": "^9.1.2",
    "postcss-extract-media-query": "^3.0.0",
    "postcss-import": "^15.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "postcss-simple-vars": "^7.0.1",
    "postcss-sort-media-queries": "^4.3.0",
    "prettier": "^2.8.4",
    "prettier-plugin-astro": "^0.8.0",
    "svg-sprite": "^2.0.2",
    "typescript": "*"
  },
  "browserslist": [
    "last 2 major versions",
    "not dead"
  ],
  "prettier": {
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "printWidth": 200,
    "singleQuote": true,
    "trailingComma": "all",
    "astroAllowShorthand": false
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2020": true,
      "node": true
    },
    "ignorePatterns": [
      "**/*.min.js",
      "**/libs/*.js"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "extends": [
      "standard-with-typescript",
      "plugin:astro/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "overrides": [
      {
        "files": [
          "*.astro"
        ],
        "parser": "astro-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser",
          "extraFileExtensions": [
            ".astro"
          ]
        },
        "rules": {
          "guard-for-in": "error"
        }
      }
    ]
  },
  "markuplint": {
    "parser": {
      ".astro$": "@markuplint/astro-parser"
    }
  }
}
