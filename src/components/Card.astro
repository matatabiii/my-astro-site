---
export interface Props {
    title: string,
    body: string,
    href: string,
}
const {href, title, body} = Astro.props;
---
<li class="link-card">
    <a class="" href={href}>
        <h2 class="">
            {title}
            <span>&rarr;</span>
        </h2>
        <p class="">
            {body}
        </p>
    </a>
</li>
