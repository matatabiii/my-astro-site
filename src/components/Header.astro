---
import Hero from '../components/Hero.astro'
import MenuToggle from '../components/MenuToggle.astro'
const { isHome, page, hero, root } = Astro.props
---

<header role="banner" id="header" data-view-over="header" class="l-header l-body__header">
  <div class="l-header__main">
    <div class="l-header-base">
      {isHome ? <h1 class="c-logo">ロゴ</h1> : <div class="c-logo">ロゴ</div>}
    </div>

    <nav id="global-menu">
      <div class="l-header__nav l-nav l:u-hidden">
        <ul class="l-nav__items">
          <li class="l-nav__item">
            <a class="l-nav__item-link" href={`${root}`}><span class="l-nav__item-label">ホーム</span></a>
          </li>
          <li class="l-nav__item">
            <a class="l-nav__item-link" href={`${root}post/`}><span class="l-nav__item-label">投稿</span></a>
          </li>
          <li class="l-nav__item">
            <a class="l-nav__item-link" href={`${root}form/`}><span class="l-nav__item-label">フォーム</span></a>
          </li>
          <li class="l-nav__item">
            <a class="l-nav__item-link" href={`${root}sample/`}><span class="l-nav__item-label">サンプル</span></a>
          </li>
        </ul>
      </div>
    </nav>
  </div>

  <MenuToggle id="menu-toggle" label="menu" controls="global-menu-drawer" />

  <!-- <div id="global-menu-drawer" class="c-drawer" aria-hidden="true">
    <div class="c-drawer__scrollarea">
      <div id="global-menu-drawer-container" class="c-drawer__container"></div>
    </div>
  </div> -->

  {!isHome && hero && <Hero page={page} hero={hero} root={root} />}
</header>
